{
  "name": "mimir",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/grasword/mimir#readme",
  "bugs": {
    "url": "https://github.com/grasword/mimir/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grasword/mimir.git"
  },
  "license": "MIT",
  "author": "Oleh Zhmaiev (https://github.com/grasword)",
  "bin": {
    "mimir": "./build/cli.js"
  },
  "type": "module",
  "exports": "./build/index.js",
  "typings": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "run-p build:*",
    "postbuild": "run-s fix:alias",
    "build:swc": "swc ./source -d ./build",
    "build:types": "tsc --project tsconfig.build.json",
    "check": "run-p check:*",
    "check:code": "eslint . --ext .ts",
    "check:format": "prettier --check 'source/**/*.ts'",
    "fix": "run-s fix:code fix:format",
    "fix:alias": "tsc-alias -p tsconfig.build.json",
    "fix:code": "run-s 'lint -- --fix'",
    "fix:format": "prettier --write 'source/**/*.ts'",
    "prepublishOnly": "run-s build",
    "preversion": "run-s check test build",
    "test": "vitest run",
    "test:integration": "vitest run integration --coverage",
    "test:unit": "vitest run unit --coverage"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "fast-glob": "3.3.1",
    "meow": "12.1.1",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@2bad/tsconfig": "2.0.1",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.83",
    "@types/node": "20.6.0",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "@vitest/coverage-v8": "0.34.4",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "39.0.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsdoc": "46.6.0",
    "eslint-plugin-n": "16.0.2",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vitest": "0.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "rimraf": "5.0.1",
    "tsc-alias": "1.8.7",
    "typescript": "5.2.2",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.4"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "20.6.1"
  }
}
